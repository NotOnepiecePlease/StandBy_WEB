<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Lista de clientes StandBy</h5>
            </div>
            <div class="card-body">
                <div class="col-sm-auto mb-3">
                    <div>

                        <a asp-controller="Cliente" asp-action="AddCliente" class="btn btn-primary add-btn me-1">
                            <i class="ri-add-line align-bottom me-1"></i> Add
                        </a>

                        <button type="button" class="btn btn-secondary" id="deleteSelecionadosButton"><i class="ri-delete-bin-5-fill align-bottom me-1"></i>Excluir selecionados</button>
                        @await Html.PartialAsync("_DeleteSelecionadosModalPartialView")

                    </div>
                </div>
        

                <table id="tabelaClientes" class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width: 100%">
                    <thead> <!-- Cabecalho da table-->
                    <tr>
                        <th scope="col" style="width: 10px;">
                        </th>
                        <th data-ordering="false" id="cl_id" name="cl_id">ID</th>
                        <th data-ordering="false" id="cl_nome" name="cl_nome" >Nome</th>
                        <th id="" name="" >Data</th>
                        <th data-ordering="false" id="cl_telefone" name="cl_telefone">Telefone</th>
                        <th data-ordering="false" id="cl_cpf" name="cl_cpf" >CPF</th>
                        <th data-ordering="true" id="cep" name="cl_cep">CEP</th>
                        <th>Cadastro</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody> <!-- Corpo da table, onde comecam os dados-->
                        <!--Body renderizado por javascript-->
                    </tbody>
                </table>
                 @*@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page }), new PagedListRenderOptions
                {
                    LinkToFirstPageFormat = "<< Primeira", 
