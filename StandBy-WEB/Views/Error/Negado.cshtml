@{
    ViewBag.Title = "404 Acesso Negado";
    Layout = null;
}

<!doctype html>
<html class="data-body-image" lang="en" data-layout="vertical" data-layout-style="detached" data-sidebar="dark" data-topbar="dark"  data-sidebar-size="lg" data-layout-mode="dark">
<head>
    @Html.Partial("~/Views/Shared/_title_meta.cshtml")
    @Html.Partial("~/Views/Shared/_head_css.cshtml")
</head>
<body>
   <div class="auth-page-wrapper pt-5">
            <!-- auth page bg -->
            <div class="auth-one-bg-position auth-one-bg"  id="auth-particles">
                <div class="bg-overlay"></div>
                
                <div class="shape">
                    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
                        <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
                    </svg>
                </div>
            </div>

            <!-- auth page content -->
            <div class="auth-page-content">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="text-center pt-4">
                                <div class="">
                                    <img src="~/assets/images/error.svg" alt="" class="error-basic-img move-animation">
                                </div>
                                <div class="mt-n4">
                                    <h1 class="display-1 fw-semibold">404</h1>
                                    <h3 class="text-uppercase">Acesso Negado! 😭</h3>
                                    <a class="text-muted">A Pagina que você tentou entrar requer acesso especial,</a>
                                    <p class="text-muted mb-4"> tente fazer login com uma conta diferente</p>
                                    <a href="@Url.Action("LogOut", "Login")" class="btn btn-info"><i class="mdi mdi-home me-1"></i>Fazer Login</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end row -->

                </div>
                <!-- end container -->
            </div>
            <!-- end auth page content -->

            <!-- footer -->
            <footer class="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="text-center">
                                <p class="mb-0 text-muted">&copy; <script>document.write(new Date().getFullYear())</script> voidEnterprise. Design por: <i class="mdi mdi-heart text-danger"></i> Velzon</p>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
            <!-- end Footer -->

        </div>
        <!-- end auth-page-wrapper -->



    @Html.Partial("~/Views/Shared/_vendor_scripts.cshtml")

    <!-- particles js -->
    <script src="~/assets/libs/particles.js/particles.js"></script>
    <!-- particles app js -->
    <script src="~/assets/js/pages/particles.app.js"></script>

</body>
</html>