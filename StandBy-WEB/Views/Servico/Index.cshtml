<script>
$(document).ready(function () {
    $.fn.dataTable.moment('DD/MM/YYYY');
    var table = $('#tabelaClientes').DataTable({
        language: { url: "https://cdn.datatables.net/plug-ins/1.13.2/i18n/pt-BR.json" },
        order: [[5, 'desc']], //Comeca em 0 = primeira coluna
        ajax: {
            url: '/Servico/ListaServicos',
            dataSrc: ''
        },
        columns: [
            {
                data: null,
                render: function (data) {
                    
                    return '<input class="form-check-input fs-15" type="checkbox" name="selectedIds" value="' +
                        data.cl_id +
                        '">';
                }
            },
            { data: "Servicos.sv_id" },
            { data: "Servicos.sv_ordem_serv" },
            { data: "cl_nome"},
            {
                data: "Servicos.sv_data",
                orderDataType: "date",
                render: function (data, type, row) {
                    if (data) {
                        var date = new Date(data);
                        return date.toLocaleDateString('pt-BR', { day: 'numeric', month: 'numeric', year: 'numeric' });
                    } else {
                        return "";
                    }
                }
            },
            { 
                data: null,
                orderDataType: "numeric",
                render: function (data) {
                    var dataServico = new Date(data.Servicos.sv_data);
                    var previsaoEntrega = new Date(data.Servicos.sv_previsao_entrega);
                    var diferencaDias = Math.round((previsaoEntrega - dataServico) / (1000 * 60 * 60 * 24));
                    var diferencaDiasSemEspaco = diferencaDias.toString().replace(/\s/g, "");
                    var diferencaDiasSemEspacoInteiro = parseInt(diferencaDiasSemEspaco);
                    if(data.Servicos.sv_previsao_entrega == null){
                        @* return "!SEM"; *@
                        return 'null';
                    }else if(diferencaDiasSemEspacoInteiro < 0){
                        @* return '<td><span class="badge badge-soft-danger">'+diferencaDiasSemEspacoInteiro +' Dias</span></td>'; *@
                        return diferencaDiasSemEspacoInteiro;
                    }
                    @* return '<td><span class="badge badge-soft-success">'+diferencaDiasSemEspacoInteiro +' Dias</span></td>'; *@
                    return diferencaDiasSemEspacoInteiro;
                }
            },
            { data: "Servicos.sv_defeito" },
            { data: "Servicos.sv_aparelho" },
            {
                data: "Servicos.sv_previsao_entrega",
                orderDataType: "date",
                render: function (data, type, row) {
                    if (data) {
                        var date = new Date(data);
                        return date.toLocaleDateString('pt-BR', { day: 'numeric', month: 'numeric', year: 'numeric' });
                    } else {
                        return "";
                    }
                }
            },
            {
                data: null,
                render: function (data) { //Coluna de Action
                    return '<div class="d-flex justify-center text-center"><a href="javascript:void(0);" class="link-success fs-15">' +
                        '<a href="@Url.Action("EditarCliente", "Cliente")?id=' +
                        data.cl_id +
                        '" class="link-primary fs-15 me-2 ms-2"><i class="ri-edit-2-line" data-bs-toggle="modal" id="create-btn"></i></a>' +
                        '<a  class="link-danger fs-15"><i class="ri-delete-bin-line" data-bs-toggle="modal" id="delete-btn" data-bs-target="#deleteRegistro-' +
                        data.cl_id +
                        '" onclick="loadDeleteClientePartialView(' +
                        data.cl_id +
                        ')"></i></a></div>';
                }
            }
        ],
        columnDefs: [
        {"orderDataType": "dom-text", "targets": [ 5 ]}
       @* { type: 'any-number', targets: 5 } *@
     ],
        pageLength: 10,
    });

    //table.column(5).search('^((?!null).)*$', true, false).draw();
});
</script>

